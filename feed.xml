---
layout: null
permalink: /feed.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
     xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
     xmlns:atom="http://www.w3.org/2005/Atom">

  <channel>

    <!-- Basic podcast metadata -->
    <title>{{ site.title | escape }}</title>
    <link>{{ site.url }}</link>
    <language>en-us</language>
    <description>{{ site.podcast_description | escape }}</description>

    <!-- Atom self-link -->
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml"/>

    <!-- iTunes-specific metadata -->
    <itunes:author>{{ site.author.name }}</itunes:author>
    <itunes:summary>{{ site.podcast_description | escape }}</itunes:summary>
    <itunes:explicit>no</itunes:explicit>
    <itunes:image href="{{ site.url }}/podcast-cover.jpg" />

    <!-- Loop through podcast posts -->
    {% for post in site.posts %}
      {% if post.audio %}
      <item>
        <title>{{ post.title | escape }}</title>
        <description>America First with Nicholas J. Fuentes, Podcast</description>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{{ site.url }}{{ post.url }}</link>
        <guid>{{ site.url }}{{ post.url }}</guid>

        <!-- audio file -->
        <enclosure url="{{ post.audio }}" type="audio/mpeg" />

        <!-- optional iTunes fields -->
        <itunes:author>{{ site.author.name }}</itunes:author>
        <itunes:explicit>no</itunes:explicit>
        <!--<itunes:duration>{{ post.duration }}</itunes:duration>-->
      </item>
      {% endif %}
    {% endfor %}

  </channel>
</rss>